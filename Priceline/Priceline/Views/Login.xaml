<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priceline.Views.Login">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Entry Placeholder="ID Number" Keyboard="Numeric" x:Name="registerUsername"/>
            <Entry Placeholder="Password" IsPassword="True" x:Name="registerPassword"/>
            <ActivityIndicator
                x:Name="activityIndicator"
                IsEnabled="true"
                IsRunning="{Binding IsBusy}"
                IsVisible="true"
                Color="#E3435D"/>
            <Button 
                HorizontalOptions="Fill"
        
                BorderRadius="5"
                BackgroundColor="#E3435D"
                Text="Login"
                TextColor="White"
                x:Name="LoginButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>